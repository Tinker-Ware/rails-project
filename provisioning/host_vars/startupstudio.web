---
#Ghost role
nodejs_version: 'nodejs-v010'
ghost_nodejs_enabled: no
ghost_nginx_enabled: no
ghost_user_name: 'tinkerware'
ghost_user_group: 'tinkerware'
ghost_install_dir: "/opt/tinker/shared_files/ghost/ghost-blog-site.git"
ghost_repo: 'git@github.com:Tinker-Ware/ghost-blog-site.git'
ghost_repo_ssh_key_name: ansible_id_rsa
ghost_config_url: "http://blog.tinkerware.io"
ghost_config_database:
  client: "sqlite3"
  connection:
    filename: "{{ ghost_install_dir }}/content/data/ghost.db"
  debug: "false"
nginx_remove_default_vhost: true
nginx_vhosts:
  - server_name: "app1.startupstudio.io"
    listen: "80"
    extra_parameters: |
      location / {
        proxy_set_header    Host $http_host;
        proxy_set_header    X-Real-IP $remote_addr;
        proxy_pass          http://127.0.0.1:3000;
      }
  - server_name: "app2.startupstudio.io"
    listen: "80"
    extra_parameters: |
      location / {
        proxy_set_header    Host $http_host;
        proxy_set_header    X-Real-IP $remote_addr;
        proxy_pass          http://127.0.0.1:4000;
      }

# Web Role
server_user: "tinkerware"
server_group: "tinkerware"
server_name: "tinkerware.io"
repo_path: "/opt/tinker/shared_files/tinkerware_web"
github_repo: "https://github.com/Tinker-Ware/landing-page"

